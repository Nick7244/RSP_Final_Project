<robot name="kendama" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="kendama" params="parent">

    <link name="ken_link">
      <visual>
	<origin xyz="0 0 0" rpy="1.5708 0 0"/>
	<geometry>
	  <mesh filename = "file::///$(find kendama_description)/meshes/visual/ken.STL"
		scale = "0.001 0.001 0.001"/>
	</geometry>
	<material name = "wood">
	  <color rgba="0.59 0.44 0.20 0.5"/>
	</material>
      </visual>
      <collision>
	<geometry>
	  <mesh filename = "file::///$(find kendama_description)/meshes/collision/ken_simple.STL"
		scale = "0.001 0.001 0.001"/>
	</geometry>
      </collision>
    </link>

    <joint name="ken_joint" type="fixed">
      <parent link="${parent}"/>
      <child link="ken_link"/>
    </joint>
    
  </xacro:macro>
</robot>
