<launch>

  <!-- start the UR5 robot
  <include file="$(find )/.launch"/>
  -->
  
  <!-- start the RealSense camera -->
  <include file="$(find realsense_camera)/launch/r200_nodelet_default.launch"/>
  
  <!-- start checkerboard tracking -->
  <include file="$(find tuw_checkerboard)/launch/demo.launch">
    <arg name="image" value="/camera/color/image_raw"/>
    <arg name="checkerboard_columns" value="7"/>
    <arg name="checkerboard_rows" value="5"/>
    <arg name="checkerboard_square_size" value="0.028"/>
    <arg name="rviz" value="true"/>
  </include>

  <!-- start easy_handeye -->
  <include file="$(find easy_handeye)/launch/calibrate.launch">
    <!-- "eye-on-base" calibration -->
    <arg name="eye_on_hand" value="false"/>
    <arg name="namespace_prefix" value="kendama_calib"/>

    <arg name="tracking_base_frame" value="camera"/>
    <arg name="tracking_marker_frame" value="checkerboard"/>
    <arg name="robot_base_frame" value="base_link"/>
    <arg name="robot_effector_frame" value="tool0"/>

    <!-- GUI for automatic robot movement -->
    <arg name="freehand_robot_movement" value="true"/>
  </include>  
  
</launch>
